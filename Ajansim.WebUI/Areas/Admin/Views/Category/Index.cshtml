@using Ajansim.Entities
@model List<Category>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Kategori Listesi</h2>
    <a href="~/Admin/Category/Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Yeni Kategori</a>
</div>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Adı</th>
            <th>Durum</th>
            <th>Oluşturulma</th>
            <th style="width: 140px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @if (item.Status == Ajansim.Core.Enums.Status.Active)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
               
                <td>
                    <a class="btn btn-sm btn-primary" href="~/Admin/Category/Edit/@item.ID">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
