@model Ajansim.WebUI.Areas.Admin.ViewModels.ServiceViewModel
@{
    ViewBag.Title = "Yeni Hizmet Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Hizmet</h2>

<form class="upload-with-progress" action="/admin/service/create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Başlık</label>
        <input type="text" name="Title" class="form-control" value="@Model?.Title" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea name="Description" class="form-control" rows="4">@Model?.Description</textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Görseller</label>
        <input type="file" name="UploadedMedia" multiple class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="/admin/service" class="btn btn-secondary">İptal</a>
</form>
